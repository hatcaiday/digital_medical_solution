<% if @post.user.followed_by?(current_user) %>
  <%= form_tag post_follow_path(user_id: @post.user.id, post_id: @post.id, id: current_user), method: :delete, remote: true do %>
    <%= button_tag t(".unfollow"), class: "btn btn-primary", id:"btn-unfollow" %>
  <% end %>
<% else %>
  <%= form_tag post_follows_path(user_id: @post.user.id, post_id: @post.id), method: :post, remote: true do %>
    <%= button_tag t(".follow"), class: "btn btn-default", id: "btn-follow" %>
  <% end %>
<% end %>
