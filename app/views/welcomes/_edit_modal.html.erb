<div class="modal fade" id="u_edit_modal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header text-center">
        <h1 class="modal-title"><%= t ".title" %><%= resource_name.to_s.humanize %></h1>
        <button type="button" class="close" data-dismiss="modal">
          <span>&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= form_for resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, id: "edit" } do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <div class="form-group">
            <%= f.label :email %><br />
            <%= f.text_field :email, id: "edit-email", autofocus: true, autocomplete: "email" %>
          </div>
          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div><%= t ".confirm" %><%= resource.unconfirmed_email %></div>
          <% end %>
          <div class="form-group">
            <%= f.label :password %> <i><%= t ".notice" %></i><br />
            <%= f.password_field :password, id: "edit-password", autocomplete: "new-password" %>
            <% if @minimum_password_length %>
              <br />
              <em><%= @minimum_password_length %><%= t ".minimum" %></em>
            <% end %>
          </div>
          <div class="form-group">
            <%= f.label :password_confirmation %><br />
            <%= f.password_field :password_confirmation, id: "edit-password_confirmation", autocomplete: "new-password" %>
          </div>
          <div class="form-group">
            <%= f.label :current_password %> <i><%= t ".current_confirm" %></i><br />
            <%= f.password_field :current_password, autocomplete: "current-password" %>
          </div>
          <div class="text-center">
            <%= f.submit t(".update"), class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
      <div class="modal-footer">
        <%= button_to t(".cancel"), registration_path(resource_name), data: { confirm: t(".sure") }, method: :delete, class: "btn btn-primary" %></p>
        <button type="button" class="btn btn-danger" data-dismiss="modal"><%= t ".close" %></button>
      </div>
    </div>
  </div>
</div>
