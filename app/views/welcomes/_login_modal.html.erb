<div class="modal fade" id="log_in_modal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header text-center">
        <h5 class="modal-title "><h1><%= t ".sign_in" %></h1></h5>
        <button type="button" class="close" data-dismiss="modal">
          <span>&times;</span>
        </button>
      </div>
      <div class="modal-body">    
        <div>
          <br>
          <%= form_for resource, as: resource_name, url: session_path(resource_name), html: {id: "sign_in"} do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
            <div class="wrap">
              <div class="form-group">
                <label for="email"><%= t ".email" %></label>
                <%= f.text_field :email, id: "sign_in-email" %>
              </div>
              <div class="form-group">
                <label for="password"><%= t ".pass" %></label>
                <%= f.password_field :password, autocomplete: "off", id: "sign_in-pass" %>
              </div><br>
              <div class="text-center">
                <% if devise_mapping.rememberable? -%>
                  <div class="field">
                    <%= f.check_box :remember_me %>
                    <%= f.label :remember_me %>
                  </div>
                <% end -%>     
              </div>
              <br>
              <div class="text-center">
                <%= f.submit t(".sign_in"), class: 'btn btn-primary' %>
              </div> 
            </div>
          <% end %>
        </div>
      </div>
      <div class="modal-footer">
        <%= render "devise/shared/links" %>
        <button type="button" class="btn btn-danger" data-dismiss="modal"><%= t ".close" %></button>
      </div>
    </div>
  </div>
</div>
