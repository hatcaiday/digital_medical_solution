<section id="hello" class="home bg-mega">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="main_home text-center">
          <div class="home_text">
            <h4 class="text-white"><em><%= t ".contact" %></em></h4>
            <h5 class="text-white"><em><%= t ".detail" %></em></h5>
          </div>
        </div>
      </div>
    </div>
  </section> 
<section id="action" class="action roomy-100">
  <div class="container">
    <div class="row">
      <div class="main_action text-center">
        <div class="col-md-4">
          <div class="action_item">
            <i class="fa fa-map-marker"></i>
            <h4 class="text-uppercase m-top-20"><%= t ".address" %></h4>
            <p><%= t ".detail" %></p>
          </div>
        </div>
        <div class="col-md-4">
          <div class="action_item">
            <i class="fa fa-headphones"></i>
            <h4 class="text-uppercase m-top-20"><%= t ".phone" %></h4>
            <p><%= t ".phone1" %> <br /> <%= t ".phone2" %></p>
          </div>
        </div>
        <div class="col-md-4">
          <div class="action_item">
            <i class="fa fa-envelope-o"></i>
            <h4 class="text-uppercase m-top-20"><%= t ".email" %></h4>
            <p><%= t ".email1" %><br />
                <%= t ".email2" %></p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<section id="contact" class="contact fix">
  <div class="container">
    <div class="row">
      <div class="main_contact p-top-100">
        <div class="col-md-6 sm-m-top-30">
          <div class="row">
            <%= form_for @message, url: create_message_url do |f| %>
              <%= notice %>
              <%= @message.errors.full_messages.join(', ') %>
              <div class="col-sm-6">
                <div class="form-group">
                  <%= f.label :name, t(".your_name") %>
                  <%= f.text_field :name, class: "form-control" %>
                </div>
              </div>
              <div class="col-sm-6">
                <div class="form-group">
                  <%= f.label :email, t(".your_email") %>
                  <%= f.text_field :email, class: "form-control" %>
                </div>
              </div>
              <div class="col-sm-12">
                <div class="form-group">
                  <%= f.label :body, t(".your_message") %>
                  <%= f.text_area :body, class: "form-control" %>
                </div>
              </div>
              <div class="text-center">
                <%= f.submit t(".send"), class: "btn btn-default" %>
              </div>
            <% end %>
          </div>
        </div>
        <div class="col-md-6">
          <div class="contact_img">
            <div class="mapouter">
              <div class="gmap_canvas">
                <iframe width="545" height="367" id="gmap_canvas" src="https://maps.google.com/maps?q=handico&t=&z=13&ie=UTF8&iwloc=&output=embed" frameborder="0" scrolling="no" marginheight="0" marginwidth="0"></iframe>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div><!--End off row -->
  </div><!--End off container -->
</section><!--End off Contact Section-->
